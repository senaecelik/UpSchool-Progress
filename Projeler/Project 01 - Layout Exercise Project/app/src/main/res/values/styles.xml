<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EntryTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">39sp</item>
    </style>

    <style name="HomeSubTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="StartInputStyle">
        <item name="android:background">@drawable/ic_start_input_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>

    <style name="price_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sub_price_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/gry</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_title">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="start_light_textStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="start_bold_subtitle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>